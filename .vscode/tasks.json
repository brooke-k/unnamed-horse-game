{
  "tasks": [
    {
      "label": "Build-Run C++",
      "type": "shell",
      "command": "/usr/bin/g++-11 ${workspaceFolder}/src/${file} -o ./build/${fileBasenameNoExtension}.exe",
      "problemMatcher": ["$gcc"]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cpp build active file",
      "command": "/usr/bin/cpp",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/cpp"
    }
  ]
}
