{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cpp build active file",
      "command": "/usr/bin/cpp",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/cpp"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cpp build main file",
      "command": "/usr/bin/cpp",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/main.cpp",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/g++-11"
    }
  ]
}
